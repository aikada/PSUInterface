<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border"
    android:padding="5dp"
    android:id="@+id/component_set_parameter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:text="Profile name" />

            <TextView
                android:id="@+id/textView_profile_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile type" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBorder" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_profile_field1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:textColor="@color/colorHighlight1" />

                <TextView
                    android:id="@+id/textView_profile_field2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:textColor="@color/colorHighlight2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_profile_field3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:textColor="@color/colorHighlight3" />

                <TextView
                    android:id="@+id/textView_profile_field4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    android:textColor="@color/colorHighlight4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_profile_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runtime limit: 00:00:00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_profile_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latch off: off"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>