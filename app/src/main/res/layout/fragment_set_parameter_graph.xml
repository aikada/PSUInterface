<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.profiles.profileTypeFragments.GraphFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_set_parameter_graph_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parameter"
        android:padding="@dimen/profile_card_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="58dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/fragment_set_parameter_graph_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:text="00.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/fragment_set_parameter_graph_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="U"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="58dp" />

        <Button
            android:id="@+id/fragment_set_parameter_graph_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_graph_points"
        android:padding="@dimen/profile_card_padding"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>